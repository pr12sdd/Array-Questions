#include <iostream>
using namespace std;

int main() {
    int T;
    cin>>T;
    while(T!=0)
	{int N,X;
	cin>>N>>X;
	int total_group=(N/6)*X;
	int total_amount;
	if(N%6==0)
	{   total_amount=total_group;
	    cout<<total_amount<<endl;
	}
	else
	{
	    total_amount=total_group+X;
	    cout<<total_amount<<endl;
	}
	T--;
	}
	return 0;
}
